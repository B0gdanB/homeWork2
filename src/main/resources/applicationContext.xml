<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="circle" class="com.home.work.Circle">

        <constructor-arg index="0" value="10"/>

    </bean>

    <bean id="triangle" class="com.home.work.Triangle">
        <constructor-arg index="0" value="15"/>
        <constructor-arg index="1" value="8"/>
        <constructor-arg index="2" value="8"/>

    </bean>

    <bean id="rectangle" class="com.home.work.Rectangle">
        <constructor-arg index="0" value="6"/>
        <constructor-arg index="1" value="8"/>

    </bean>


</beans>